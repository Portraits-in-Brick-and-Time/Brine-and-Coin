<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="BrineAndCoin.Launcher.MainWindow" Icon="icon.ico"
        Title="Portraits in Brick and Time - Brine and Coin">
    <Grid>
        <Image />

        <Grid VerticalAlignment="Bottom" Margin="5" HorizontalAlignment="Stretch" ColumnDefinitions="*,Auto">
            <ProgressBar Height="20" Margin="10" Value="{Binding ProgressValue}" />
            <Button Grid.Column="1" Command="{Binding CheckForUpdatesCommand}">Launch Game</Button>
        </Grid>
    </Grid>
</Window>
